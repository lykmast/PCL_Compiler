program test;
var arr1: array [5] of integer;
	arr2: array [5] of integer;
	x,y,z: integer;
	dyn_arr: ^array of array[5] of integer;
begin
	x:=0;
	while x<5 do
	begin
		arr1[x]:=x;
		arr2[x]:=x+100;
		x:=x+1;
	end;

	new [2] dyn_arr;
	dyn_arr^[0][0]:=arr1[3];
	arr2[3]:=dyn_arr^[0][0];
	dyn_arr^[1][0]:=dyn_arr^[0][0]+100000;
	y:=0;
	while y<5 do
	begin
		dyn_arr^[0][y]:=10000+dyn_arr^[0][0];
		dyn_arr^[1][y]:=20000+dyn_arr^[1][0];
		y:=y+1;
	end;
end.
